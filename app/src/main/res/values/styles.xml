<resources>

    <!-- Base application theme. -->
    <style name="Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="AppTheme" parent="Base">
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@drawable/button_purple_color_state</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <!--<item name="colorControlHighlight">@color/sme_light_grey</item>--> <!-- Update the ripple color -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditText.Default" parent="Base.Widget.AppCompat.EditText"></style>

    <style name="EditText.Name" parent="EditText.Default">
        <item name="android:inputType">textCapWords|textAutoComplete</item>
    </style>

    <style name="EditText.PersonName" parent="EditText.Default">
        <item name="android:inputType">textCapWords|textAutoComplete|textPersonName</item>
    </style>

    <style name="EditText.Email" parent="EditText.Default">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditText.Password" parent="EditText.Default">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditText.Number" parent="EditText.Default">
        <item name="android:inputType">number</item>
    </style>

</resources>
